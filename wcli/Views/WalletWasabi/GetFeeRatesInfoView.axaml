<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mww="using:WasabiCli.Models.WalletWasabi"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WasabiCli.Views.WalletWasabi.GetFeeRatesInfoView"
             x:CompileBindings="True" x:DataType="mww:GetFeeRatesInfo">
  <DockPanel>
    <TextBox Text="{Binding FeeRates.Count, FallbackValue=0}"
             Classes="readonly"
             IsEnabled="False"
             DockPanel.Dock="Top"/>
    <!-- FeeRates -->
    <Expander Header="FeeRates"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top"
              Padding="0"
              Margin="0,4,0,0"
              IsExpanded="True">
      <ListBox ItemsSource="{Binding FeeRates}">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding .}"
                       VerticalAlignment="Center" />
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Expander>
  </DockPanel>
</UserControl>

